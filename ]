'use client';
import { useEffect, useState } from "react";
import { Moon, Sun } from "lucide-react";

function ThemeToggle() {
    const [isDark, setIsDark] = useState(false);

    useEffect(() => {
        if (isDark) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }

    }, [isDark]);

    const toggle = () => {
        setIsDark(!isDark);
    }
    return (
        <>
        {isDark ? (
            <Moon className="fixed top-5 left-5 sm:top-10 sm:left-10 h-15 w-15 text-foreground hover:text-foreground-muted cursor-pointer p-4" onClick={toggle}/>
        ) : (
            <Sun className="fixed top-5 left-5 sm:top-10 sm:left-10 h-10 w-10 text-foreground hover:text-foreground-muted" onClick={toggle}/>
        )}
        </>
    );
}

export default ThemeToggle;
